<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="0"
    android:exitFadeDuration="100">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <solid android:color="@color/colorPrimaryBlue"/>
                    <padding
                        android:bottom="2dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <solid android:color="@color/SuperLiteGray"/>
                    <padding
                        android:left="10dp"
                        android:right="10dp"
                        android:bottom="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="@color/colorPrimaryBlue"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>