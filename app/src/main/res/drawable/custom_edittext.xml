<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="400"
    android:exitFadeDuration="300">

    <item android:state_focused="false">
        <layer-list>
            <item android:bottom="0dp"
                android:top="-4dp"
                android:left="-4dp"
                android:right="-4dp">
                <shape android:shape="rectangle">

                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/colorBlack"/>
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item
                android:bottom="0dp"
                android:top="-4dp"
                android:left="-4dp"
                android:right="-4dp">

                <shape android:shape="rectangle">

                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                    <gradient
                        android:startColor="@color/colorBlack"
                        android:endColor="@color/colorlipsred"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/colorlipsred"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>