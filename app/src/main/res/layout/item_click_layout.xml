<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="10dp"
            android:translationZ="8dp"
            android:id="@+id/event"
            android:paddingVertical="5dp"
            android:paddingHorizontal="3dp"
            android:background="@drawable/item_click_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:maxLength="15"
                android:maxLines="1"
                android:padding="10dp"
                android:drawableLeft="@drawable/title_black"
                android:drawablePadding="15dp"
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="event"
                android:drawableTint="@color/color50"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:maxLength="15"
                android:maxLines="1"
                android:padding="10dp"
                android:drawableTint="@color/color50"
                android:textColor="@color/colorBlack"
                android:drawableLeft="@drawable/des"
                android:drawablePadding="15dp"
                android:id="@+id/eventdes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="event"/>


            <TextView
                android:maxLength="15"
                android:maxLines="1"
                android:padding="10dp"
                android:drawableTint="@color/color50"
                android:textColor="@color/colorBlack"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="15dp"
                android:id="@+id/eventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="event"/>

            <TextView
                android:maxLength="15"
                android:maxLines="1"
                android:drawableTint="@color/color50"
                android:textColor="@color/colorBlack"
                android:padding="10dp"
                android:drawableLeft="@drawable/location_black"
                android:drawablePadding="15dp"
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="event"/>



        </LinearLayout>

        <LinearLayout
            android:background="@drawable/item_click_background"
            android:translationZ="7dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:layout_weight="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_marginHorizontal="2dp"
                android:checked="true"
                android:background="@drawable/switch_custom"
                android:id="@+id/alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/alarm_true_false"
                android:padding="10dp"
                android:text="" />
            <CheckBox
                android:layout_marginHorizontal="2dp"
                android:checked="true"

                android:id="@+id/noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/switch_custom"
                android:drawableLeft="@drawable/noti_true_false"
                android:padding="10dp"
                android:text="" />
            <ImageView
                android:id="@+id/phonemode"
                android:layout_marginHorizontal="2dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vibrate_white_24"
                android:background="@drawable/ovalblue"/>
        </LinearLayout>


        <TextView
            android:id="@+id/note"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:translationZ="7dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/backnote"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addnote"
            android:maxWidth="100dp"
            android:maxLines="4"
            android:drawablePadding="15dp"/>


    </LinearLayout>



</LinearLayout>