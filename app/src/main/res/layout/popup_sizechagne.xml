<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="40dp"
        android:id="@+id/sizechangelayout"
        android:background="@drawable/custom_popupwindow"
        android:padding="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <SeekBar
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:id="@+id/seekwid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:progressDrawable="@drawable/custom_progress"
                android:thumb="@null"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="0dp"
                android:rotation="90"
                android:src="@drawable/height_black"
                app:layout_constraintBottom_toBottomOf="@+id/seekwid"
                app:layout_constraintEnd_toEndOf="@+id/seekwid"
                app:layout_constraintStart_toStartOf="@+id/seekwid"
                app:layout_constraintTop_toTopOf="@+id/seekwid" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <SeekBar
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:id="@+id/seekhei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress"
                android:thumb="@null"
                android:thumbTint="@color/none_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="0dp"
                android:src="@drawable/height_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</LinearLayout>